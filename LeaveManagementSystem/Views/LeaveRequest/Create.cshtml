@model CreateLeaveRequestVM

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div>
        <h1>Create Leave Request</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RequestStartDate" class="control-label"></label>
                    <input value="@(DateTime.Now.Date.ToString("yyyy/MM/dd"))" asp-for="RequestStartDate" class="form-control" />
                    <span  asp-validation-for="RequestStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequestEndtDate" class="control-label"></label>
                    <input value="@(DateTime.Now.Date.ToString("yyyy/MM/dd"))" asp-for="RequestEndtDate" class="form-control" />
                    <span asp-validation-for="RequestEndtDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LeaveTypeId"></label>
                    <select class="form-select" asp-for="LeaveTypeId" asp-items="Model.LeaveTypelist">
                        <option disabled selected>--Select Leave Type--</option>
                    </select>
                    <span asp-validation-for="LeaveTypelist" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequestComments" class="control-label"></label>
                    <textarea asp-for="RequestComments" class="form-control" draggable="false"></textarea>
                    <span asp-validation-for="RequestComments" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="LeaveAllocation" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $(function(){
            $("#RequestStartDate").datepicker({
               dateFormat : 'yy/mm/dd',
               changeMonth : true , 
               changeYear : true
            });
                $("#RequestEndtDate").datepicker({
                   dateFormat : 'yy/mm/dd',
                   changeMonth : true ,
                   changeYear : true
                });
    });
    </script>
}
