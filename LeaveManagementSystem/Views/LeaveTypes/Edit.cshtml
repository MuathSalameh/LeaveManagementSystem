@model LeaveType

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="my-2">
        <h1>Edit Leave Type</h1>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditType" method="post">
                <input asp-for="Id" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="NumberOfDays" class="control-label"></label>
                    <input asp-for="NumberOfDays" class="form-control" />
                    <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" class="btn btn-primary" />
                    <a class="btn btn-outline-primary" asp-controller="Leavetypes" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
